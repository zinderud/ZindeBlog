@using ZindeBlog.Web.ViewModels.Exception
@model ErrorViewModel
<div class="error-page">
    <h2 class="headline text-red">500</h2>
    <div class="error-content">
        <h3><i class="fa fa-warning text-red"></i> @Model.Title</h3>
        <p>
            @Model.Content
        </p>
        <p>
            Hata<a asp-action="Index" asp-controller="Home">Home</a>, Home
        </p>
        <form asp-action="Search" asp-controller="Home" class="search-form" method="get">
            <div class="input-group">
                <input type="text" name="keywords" class="form-control" placeholder="Ara">
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-danger btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>